// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model for Indeed jobs
model IndeedJob {
  id                 Int         @id @default(autoincrement())
  company            String
  country            CountryCode
  createDate         DateTime
  indeedApplyEnabled Boolean
  jobkey             String      @unique
  link               String
  status             JobStatus
  title              String
}

enum CountryCode {
  CA
  CH
  FR
  US
}

enum JobStatus {
  Applied
  Ignored
  NotReviewed
}

// Model for Linkedin job
model LinkedinJob {
  id         Int       @id @default(autoincrement())
  company    String
  createDate DateTime  @default(now())
  easyApply  Boolean
  jobUrn     String    @unique
  link       String
  location   String
  status     JobStatus
  title      String
}

// Model for Linkedin Post
model LinkedinPost {
  id               Int        @id @default(autoincrement())
  authorProfileUrl String?
  authorCountry    String?
  authorName       String
  postDate         DateTime
  postUrl          String     @unique
  profilePhotoUrl  String?
  summary          String
  status           PostStatus
  trackingUrn      String     @unique
}

enum PostStatus {
  Applied
  Ignored
  NotReviewed
}

// Model for Indeed searches
model IndeedJobSearchMeta {
  id           Int      @id @default(autoincrement())
  identifier   String   @unique
  domain       String
  query        String
  lastSearchAt DateTime @default(now())

  @@unique([domain, query])
}

// Model for Indeed searches
model LinkedinJobSearchMeta {
  id           Int      @id @default(autoincrement())
  identifier   String   @unique
  geoId        String
  query        String
  lastSearchAt DateTime @default(now())

  @@unique([geoId, query])
}
